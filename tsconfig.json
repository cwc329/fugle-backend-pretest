{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "dist/",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "paths": {
      "#apiRequests": ["apiRequests"],
      "#apiRequests/*": ["apiRequests/*"],
      "#controllers": ["controllers"],
      "#controllers/*": ["controllers/*"],
      "#configs": ["configs"],
      "#configs/*": ["configs/*"],
      "#middlewares": ["middlewares"],
      "#middlewares/*": ["middlewares/*"],
      "#pubSubs": ["pubSubs"],
      "#pubSubs/*": ["pubSubs/*"],
      "#routes": ["routes"],
      "#routes/*": ["routes/*"],
      "#websocketClients": ["websocketClients"],
      "#websocketClients/*": ["websocketClients/*"],
      "#websockets": ["websockets"],
      "#websockets/*": ["websockets/*"],
      "#utils": ["utils"],
      "#utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}
